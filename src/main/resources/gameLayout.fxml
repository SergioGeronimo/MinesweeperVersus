<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane
        alignment="BASELINE_CENTER"
        minWidth="1024.0"
        prefHeight="576.0"
        xmlns="http://javafx.com/javafx/11.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="client.ui.GameLayoutController">

    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="32" />
        <ColumnConstraints hgrow="ALWAYS" />
        <ColumnConstraints hgrow="ALWAYS" maxWidth="32" />
        <ColumnConstraints hgrow="ALWAYS" maxWidth="32" />
        <ColumnConstraints hgrow="ALWAYS" />
        <ColumnConstraints hgrow="ALWAYS" maxWidth="32" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
    </rowConstraints>

    <VBox GridPane.columnIndex="0" GridPane.columnSpan="6" />

    <!-- player match stats -->
    <GridPane fx:id="playerMatchStats" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <rowConstraints>
            <RowConstraints vgrow="ALWAYS" />
        </rowConstraints>


        <Label text="Mines left" GridPane.columnIndex="0" GridPane.fillWidth="" GridPane.halignment="CENTER" />
        <Label text="You" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER" />
        <Label text="Flagged mines" GridPane.columnIndex="2" GridPane.halignment="CENTER"/>
    </GridPane>


    <!--player board container -->
    <GridPane
            gridLinesVisible="true"
            fx:id="playerBoardContainer"
            onMouseClicked="#setMatchReady"
            GridPane.columnIndex="1"
            GridPane.rowIndex="2"
            GridPane.rowSpan="6">

        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" />
        </columnConstraints>

        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>
      <GridPane.margin>
         <Insets bottom="32.0" />
      </GridPane.margin>
        <Label GridPane.halignment="CENTER" text="Click here to start"/>
    </GridPane>

    <!-- rival match stats -->
    <GridPane fx:id="rivalMatchStats" GridPane.columnIndex="4" GridPane.rowIndex="1">
        <columnConstraints>

            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <rowConstraints>
            <RowConstraints vgrow="ALWAYS" />
        </rowConstraints>

        <Label text="Flagged mines" GridPane.columnIndex="0" GridPane.halignment="CENTER"/>
        <Label text="Rival" GridPane.columnIndex="1" GridPane.halignment="CENTER" />
        <Label text="Mines left" GridPane.columnIndex="2" GridPane.halignment="CENTER" />


    </GridPane>

    <!-- rival board container -->
    <GridPane fx:id="rivalBoardContainer" GridPane.columnIndex="4" GridPane.rowIndex="2" GridPane.rowSpan="6">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" />
        </columnConstraints>

        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>
      <GridPane.margin>
         <Insets bottom="32.0" />
      </GridPane.margin>
    </GridPane>

</GridPane>
