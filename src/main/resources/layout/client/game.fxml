<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane
        fx:id="mainContainer"
        alignment="BASELINE_CENTER"
        prefWidth="1280.0"
        prefHeight="720.0"
        stylesheets="/stylesheets/theme.css"
        styleClass="main-container"
        xmlns="http://javafx.com/javafx/11.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="client.ui.controller.GameController">

    <columnConstraints>
        <ColumnConstraints percentWidth="4"/>
        <ColumnConstraints percentWidth="14"/>
        <ColumnConstraints percentWidth="14"/>
        <ColumnConstraints percentWidth="14"/>
        <ColumnConstraints percentWidth="4"/>
        <ColumnConstraints percentWidth="4"/>
        <ColumnConstraints percentWidth="14"/>
        <ColumnConstraints percentWidth="14"/>
        <ColumnConstraints percentWidth="14"/>
        <ColumnConstraints percentWidth="4"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints prefHeight="48" vgrow="NEVER" />
        <RowConstraints prefHeight="24" vgrow="NEVER" />
        <RowConstraints prefHeight="48" vgrow="NEVER" />
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints prefHeight="24" vgrow="NEVER" />
    </rowConstraints>

    <!-- game menu -->
    <VBox
            GridPane.columnIndex="0"
            GridPane.rowIndex="0"
            GridPane.columnSpan="10"
            fx:id="gameMenu"
            styleClass="game-menu"/>

    <!-- player match stats -->
    <Label
            text="Player"
            fx:id="playerLabel"
            textAlignment="CENTER"
            GridPane.columnIndex="2"
            GridPane.rowIndex="2"
            GridPane.halignment="CENTER" />

    <!--player board container -->
    <GridPane
            fx:id="playerBoardContainer"
            styleClass="board-container"
            GridPane.columnIndex="1"
            GridPane.rowIndex="3"
            GridPane.columnSpan="3">

        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" />
        </columnConstraints>

        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>
        <Label
                GridPane.halignment="CENTER"
                text="Gridpane del jugador"/>
    </GridPane>

    <!-- rival match stats -->
    <Label
            text="Rival"
            fx:id="rivalLabel"
            GridPane.columnIndex="7"
            GridPane.rowIndex="2"
            GridPane.halignment="CENTER" />


    <!-- rival board container -->
    <GridPane
            fx:id="rivalBoardContainer"
            styleClass="board-container"
            disable="true"
            GridPane.columnIndex="6"
            GridPane.rowIndex="3"
            GridPane.columnSpan="3">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" />
        </columnConstraints>

        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>
    </GridPane>

    <!-- result gridpane container -->
    <GridPane
            styleClass="resultContainer"
            GridPane.columnIndex="1"
            GridPane.columnSpan="8"
            GridPane.rowIndex="3"
            visible="false"
            fx:id="resultContainer">
        <columnConstraints>
            <ColumnConstraints percentWidth="40"/>
            <ColumnConstraints percentWidth="20"/>
            <ColumnConstraints percentWidth="40"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints percentHeight="20"/>
            <RowConstraints percentHeight="30"/>
            <RowConstraints percentHeight="15"/>
            <RowConstraints percentHeight="15"/>
            <RowConstraints percentHeight="20"/>
        </rowConstraints>
        <Label
                fx:id="resultLabel"
                text="result"
                GridPane.rowIndex="1"
                GridPane.columnIndex="0"
                GridPane.columnSpan="3"
                GridPane.halignment="CENTER"
                styleClass="main-title, centered-text"/>
        <Label
                fx:id="resultInfo"
                text="result info"
                GridPane.rowIndex="2"
                GridPane.columnIndex="0"
                GridPane.columnSpan="3"
                GridPane.valignment="TOP"
                GridPane.halignment="CENTER"
                styleClass="centered-text"
        />
        <Button
                styleClass="wide"
                text="salir"
                GridPane.rowIndex="3"
                GridPane.columnIndex="1"
        />

    </GridPane>

</GridPane>
