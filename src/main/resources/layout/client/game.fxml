<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<GridPane
        fx:id="mainContainer"
        alignment="BASELINE_CENTER"
        prefWidth="1280.0"
        prefHeight="720.0"
        stylesheets="/stylesheets/theme.css"
        styleClass="main-container"
        xmlns="http://javafx.com/javafx/11.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="client.ui.controller.GameController">

    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" percentWidth="4"/>
        <ColumnConstraints hgrow="NEVER" percentWidth="14"/>
        <ColumnConstraints hgrow="NEVER" percentWidth="14"/>
        <ColumnConstraints hgrow="NEVER" percentWidth="14"/>
        <ColumnConstraints hgrow="NEVER" percentWidth="4"/>
        <ColumnConstraints hgrow="NEVER" percentWidth="4"/>
        <ColumnConstraints hgrow="NEVER" percentWidth="14"/>
        <ColumnConstraints hgrow="NEVER" percentWidth="14"/>
        <ColumnConstraints hgrow="NEVER" percentWidth="14"/>
        <ColumnConstraints hgrow="NEVER" percentWidth="4"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints prefHeight="48" vgrow="NEVER" />
        <RowConstraints prefHeight="24" vgrow="NEVER" />
        <RowConstraints prefHeight="48" vgrow="NEVER" />
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints prefHeight="24" vgrow="NEVER" />
    </rowConstraints>

    <!-- game menu -->
    <VBox
            GridPane.columnIndex="0"
            GridPane.rowIndex="0"
            GridPane.columnSpan="10"
            fx:id="gameMenu"
            styleClass="game-menu"/>
    <Label
            GridPane.columnIndex="1"
            GridPane.rowIndex="0"
            styleClass="error"
            visible="false"
            fx:id="connectionInfo"
            text="Sin conexiÃ³n con el servidor"
    />
    <Button fx:id="screenButton"
            styleClass="maximize, wide"
            GridPane.columnIndex="7"
            GridPane.rowIndex="0"
            onMouseClicked="#enterFullscreen"
    />
    <Button
            GridPane.columnIndex="8"
            GridPane.rowIndex="0"
            text="Rendirse"
            styleClass="wide"
            onMouseClicked="#endMatch"
    />


    <!-- player match stats -->
    <HBox
            GridPane.columnIndex="1"
            GridPane.rowIndex="2"
            alignment="CENTER_LEFT"
    >
        <ImageView

                styleClass="icon">
            <Image url="@/icons/flag.png" preserveRatio="true"/>
        </ImageView>
        <Label
                fx:id="playerFlagsLabel"
                GridPane.columnIndex="1"
                GridPane.rowIndex="2"/>
    </HBox>

    <Label
            text="Player"
            fx:id="playerLabel"
            textAlignment="CENTER"
            GridPane.columnIndex="2"
            GridPane.rowIndex="2"
            GridPane.halignment="CENTER"/>


    <!--player board container -->
    <GridPane
            fx:id="playerBoardContainer"
            styleClass="board-container"
            GridPane.columnIndex="1"
            GridPane.rowIndex="3"
            GridPane.columnSpan="3">

        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" />
        </columnConstraints>

        <rowConstraints>
            <RowConstraints vgrow="NEVER" />
        </rowConstraints>
        <Label
                GridPane.halignment="CENTER"
                text="Gridpane del jugador"/>
    </GridPane>

    <!-- rival match stats -->
    <Label
            text="Rival"
            fx:id="rivalLabel"
            GridPane.columnIndex="7"
            GridPane.rowIndex="2"
            GridPane.halignment="CENTER" />


    <!-- rival board container -->
    <GridPane
            fx:id="rivalBoardContainer"
            styleClass="board-container"
            disable="true"
            GridPane.columnIndex="6"
            GridPane.rowIndex="3"
            GridPane.columnSpan="3">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" />
        </columnConstraints>

        <rowConstraints>
            <RowConstraints vgrow="NEVER" />
        </rowConstraints>
    </GridPane>


    <!-- result gridpane container -->
    <GridPane
            styleClass="resultContainer"
            GridPane.columnIndex="0"
            GridPane.columnSpan="10"
            GridPane.rowIndex="3"
            visible="false"
            fx:id="resultContainer">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" percentWidth="40"/>
            <ColumnConstraints hgrow="NEVER" percentWidth="20"/>
            <ColumnConstraints hgrow="NEVER" percentWidth="40"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="NEVER" percentHeight="20"/>
            <RowConstraints vgrow="NEVER" percentHeight="30"/>
            <RowConstraints vgrow="NEVER" percentHeight="15"/>
            <RowConstraints vgrow="NEVER" percentHeight="15"/>
            <RowConstraints vgrow="NEVER" percentHeight="20"/>
        </rowConstraints>

        <Pane
                fx:id="resultBanner"
                GridPane.columnIndex="0"
                GridPane.columnSpan="3"
                GridPane.rowIndex="1"
                GridPane.rowSpan="3"
        />

        <Label
                fx:id="resultLabel"
                text="result"
                GridPane.rowIndex="1"
                GridPane.columnIndex="0"
                GridPane.columnSpan="3"
                GridPane.halignment="CENTER"
                styleClass="main-title, centered-text"/>
        <Label
                fx:id="resultInfo"
                text="result info"
                GridPane.rowIndex="2"
                GridPane.columnIndex="0"
                GridPane.columnSpan="3"
                GridPane.valignment="TOP"
                GridPane.halignment="CENTER"
                styleClass="centered-text"
        />

        <Button
                styleClass="wide"
                text="continuar"
                GridPane.rowIndex="3"
                GridPane.columnIndex="1"
                onMouseClicked="#endMatch"
        />

    </GridPane>

</GridPane>
